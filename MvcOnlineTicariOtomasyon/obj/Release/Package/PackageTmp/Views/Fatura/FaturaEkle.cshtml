@model MvcOnlineTicariOtomasyon.Models.Siniflar.Faturalar
@{
    ViewBag.Title = "FaturaEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12">
                <div class="card card-margin">
                    <div class="card-body">
                        <div class="page-header">
                            <h3 class="page-title">
                                <span class="page-title-icon bg-gradient-primary text-white mr-2">
                                    <i class="mdi mdi-receipt"></i>
                                </span> Fatura Ekle
                            </h3>
                            <nav aria-label="breadcrumb">
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item active" aria-current="page">
                                        <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                        <div class="form-sample">
                            @using (Html.BeginForm("FaturaEkle", "Fatura", new { @class = "form-group" }))
                            {
                                @Html.HiddenFor(x => x.FaturaId)
                                @Html.LabelFor(x => x.FaturaSeriNo)
                                @Html.TextBoxFor(x => x.FaturaSeriNo, new { @class = "form-control" })
                                <br />
                                @Html.LabelFor(x => x.FaturaSıraNo)
                                @Html.TextBoxFor(x => x.FaturaSıraNo, new { @class = "form-control" })
                                <br />
                                @Html.LabelFor(x => x.VergiDairesi)
                                @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form-control" })
                                <br />
                                @Html.LabelFor(x => x.TeslimAlan)
                                @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form-control" })
                                <br />
                                @Html.LabelFor(x => x.TeslimEden)
                                @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form-control" })
                                <br />
                                @Html.LabelFor(x => x.Tarih)
                                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                                <br />
                                @Html.LabelFor(x => x.Saat)
                                @Html.TextBoxFor(x => x.Saat, new { @class = "form-control" })
                                <br />
                                <button class="btn btn-success">Kaydet</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>