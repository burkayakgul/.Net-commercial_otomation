@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using MvcOnlineTicariOtomasyon.Controllers.Admin
@using System
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container konteynir">
        <div class="row">
            <div class="col-6 mt-4">
                <img src="~/lib/Image/logo1.png" width="250px;" />
                
                <div class="mt-4 sirket-bilgi">
                    <h6>Burkay Akgül'ün Şirketi</h6>
                    <p>
                        Eskişehir yolu Dumlupınar Bulvarı No 108 Söğütözü
                        Çankaya / ANKARA
                    </p>
                    <p>Tel 0312 284 52 52 | Fax 0312 284 02 02</p>
                    <p>Ankara / Başkent Vergi Dairesi</p>
                    <p>Vergi No : 5555555555</p>
                </div>
                <div class="col-4">
                    <table class="table table-bordered tablo-class tablo-card">
                        <tr>
                            <td>
                                <p>Sayın : Burkay AKGÜL</p>
                                <p>Emek Mahallesi, İsmet İnönü Bulvarı, PK: 06490 Çankaya/ANKARA</p>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-1 mt-4">
                
            </div>
            <div class="col-5 mt-4">
                <div>
                    <div class="mb-4">
                        <img class="align-content-end" src="~/lib/Image/maliye-logo.png" width="100px;" />
                        <h5 id="hasbes">İrsaliye Fatura</h5>
                    </div>
                    <br />
                    <h6>Seri No : @ViewBag.fatura.FaturaSeriNo</h6>
                    <h6>Sıra No : @ViewBag.fatura.FaturaSıraNo</h6>
                </div>
                <div class="mt-4">
                    <table class="table table-bordered tablo-class">
                        <tr>
                            <th>Vergi Dairesi : </th>
                            <td>Ankara / Başkent</td>
                        </tr>
                        <tr>
                            <th>Vergi No : </th>
                            <td>555555</td>
                        </tr>
                        <tr>
                            <th>Düzenleme Tarihi : </th>
                            <td>@ViewBag.fatura.Tarih</td>
                        </tr>
                        <tr>
                            <th>Düzenleme Saati : </th>
                            <td>@ViewBag.fatura.Saat</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered tablo-class">
                    <thead class="">
                        <tr>
                            <th>Açıklama</th>
                            <th>Miktarı</th>
                            <th>Birim Fiyatı</th>
                            <th>Tutarı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            decimal toplam = 0;
                            decimal kdv = 18/100;
                        }
                        @foreach (var x in Model)
                           
                        {
                            toplam = toplam +  @x.Tutar;
                            <tr>
                                <td>@x.Aciklama</td>
                                <td>@x.Miktar</td>
                                <td>@x.BirimFiyat</td>
                                <td class="tutar">@x.Tutar</td>

                            </tr>
                        }
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>

                        <tr>
                            <td rowspan="4" colspan="2">
                                <b>Yalnız </b> @ViewBag.parayazi 
                            </td>
                            <th>Toplam</th>
                            <td>@ViewBag.toplam</td>
                        </tr>
                        <tr>
                            <th>KDV %18:</th>
                            <td>@ViewBag.kdvsi</td>
                        </tr>
                        <tr>
                            <th>Genel Toplam</th>
                            <td>@ViewBag.geneltoplam</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">

        </div>
    </div>
</body>
<style>
    .tablo-class {
        border-color: #45aaf2;
    }
    .tablo-card{
        display: block;
        width: 300%;
    }
    .cari-card {
        min-height: 130px;
        min-width: 300px;
    }

    .musteri-card p{
        display:inline-block;
    }
    .musteri-card h6{
        display:inline-block;
    }
    td{
        display:table-cell;
        height:40px;
    }
    #hasbes{
        display:inline-block;
    }
    .sirket-bilgi{
        
        font-size:12px;
    }
    #ornektir{
        z-index:-1;
        position:absolute;
        display:inline;
        height:100vh;
    }
    .konteynir {
        background-image: url(../../lib/Image/ornektir.png);
        background-repeat:no-repeat;
        background-size:70%;
        background-position:25% 65%;
        }
</style>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script>
